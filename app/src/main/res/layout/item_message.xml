<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:id="@+id/item_message_linearlayout_main">

    <LinearLayout
        android:id="@+id/item_message_linearlayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <ImageView
            android:id="@+id/item_message_imageview_profile"
            android:layout_width="50dp"
            android:layout_height="50dp"/>
        <TextView
            android:id="@+id/item_message_textview_name"
            android:text="name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_message_textview_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:elevation="2dp"
            android:textSize="18dp"
            android:text="message"/>

        <TextView
            android:id="@+id/item_message_textview_timestamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2020.02.02 02:02"
            android:textSize="9dp"
            android:textColor="@android:color/darker_gray"/>
    </LinearLayout>


</LinearLayout>